{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "isolate_id",
        "expect_species"
    ],
    ,
    "properties": {
        "isolate_id": {
            "type": "string",
        },
        "expect_species":{
            "type": "string",
        }
    },
    "allOf": [
        {
            "if": {
                "properties": { "organism": { "const": "Listeria monocytogenes" } },
                "required": ["expect_species"]
            },
            "then": {
                "properties": { 
                    "n_contigs_1kbp": { "maximum": 300 },
                    "assembly_size": { "minimum": 2700000 , "maximum": 3200000},
                    "GC_perc": { "minimum": 33.9 , "maximum": 41.9},
                    "orthologs_found": { "minimum": 0.95 },
                    "duplicated_orthologs": { "maximum": 0.05 },
                    "fraction_majority_genus": { "minimum": 0.95 },
                    "majority_genus": { "const": "Listeria" }
                },
                "required": [
                    "n_contigs_1kbp",
                    "assembly_size",
                    "GC_perc",
                    "orthologs_found",
                    "duplicated_orthologs",
                    "fraction_majority_genus",
                    "majority_genus"
                ]
            }
        },
        {
            "if": {
                "properties": { "organism": { "const": "Salmonella enterica" } },
                "required": ["expect_species"]
            },
            "then": {
                "properties": { 
                    "n_contigs_1kbp": { "maximum": 300 },
                    "assembly_size": { "minimum": 4300000 , "maximum": 5200000},
                    "GC_perc": { "minimum": 48.1 , "maximum": 56.1},
                    "orthologs_found": { "minimum": 0.95 },
                    "duplicated_orthologs": { "maximum": 0.05 },
                    "fraction_majority_genus": { "minimum": 0.95 },
                    "majority_genus": { "const": "Salmonella" }
                },
                "required": [
                    "n_contigs_1kbp",
                    "assembly_size",
                    "GC_perc",
                    "orthologs_found",
                    "duplicated_orthologs",
                    "fraction_majority_genus",
                    "majority_genus"
                ]
            }
        },
        {
            "if": {
                "properties": { "organism": { "const": "Campylobacter spp." } },
                "required": ["expect_species"]
            },
            "then": {
                "properties": { 
                    "n_contigs_1kbp": { "maximum": 300 },
                    "assembly_size": { "minimum": 1500000 , "maximum": 1900000},
                    "GC_perc": { "minimum": 26.4 , "maximum": 35.3},
                    "orthologs_found": { "minimum": 0.8 },
                    "duplicated_orthologs": { "maximum": 0.05 },
                    "fraction_majority_genus": { "minimum": 0.90 },
                    "majority_genus": { "const": "Campylobacter" }
                },
                "required": [
                    "n_contigs_1kbp",
                    "assembly_size",
                    "GC_perc",
                    "orthologs_found",
                    "duplicated_orthologs",
                    "fraction_majority_genus",
                    "majority_genus"
                ]
            }
        },
        {
            "if": {
                "properties": { "organism": { "const": "Escherichia coli" } },
                "required": ["expect_species"]
            },
            "then": {
                "properties": { 
                    "n_contigs_1kbp": { "maximum": 500 },
                    "assembly_size": { "minimum": 4500000 , "maximum": 5900000},
                    "GC_perc": { "minimum": 46.6 , "maximum": 54.6},
                    "orthologs_found": { "minimum": 0.95 },
                    "duplicated_orthologs": { "maximum": 0.05 },
                    "fraction_majority_genus": { "minimum": 0.90 },
                    "majority_genus": { "enum": ["Escherichia coli", "Shigella"] }
                },
                "required": [
                    "n_contigs_1kbp",
                    "assembly_size",
                    "GC_perc",
                    "orthologs_found",
                    "duplicated_orthologs",
                    "fraction_majority_genus",
                    "majority_genus"
                ]
            }
        }
    ]
}
